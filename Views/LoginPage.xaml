<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PeopleCounterDesktop.Views.LoginPage"
             BackgroundColor="#F5F5F7"
             Shell.NavBarIsVisible="False">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0">
            <Image Source="login_bg.jpg" 
                   Aspect="AspectFill"/>

            <VerticalStackLayout 
                VerticalOptions="Center" 
                HorizontalOptions="Center"
                Spacing="0">

                <Border 
                    VerticalOptions="Center"
                    HorizontalOptions="Center"
                    BackgroundColor="White"
                    Stroke="White"
                    StrokeThickness="1"
                    Padding="50,40"
                    StrokeShape="RoundRectangle 20">

                    <VerticalStackLayout Spacing="20">


                        <Label Text="Smart Occuoancy Monitoring" 
                               FontSize="38"
                               TextColor="#6366F1"
                               FontFamily="PoppinsBold"
                               HorizontalOptions="Center"/>

                        <Label Text="Sign in to continue" 
                               FontSize="22"
                               WidthRequest="450"
                               HorizontalOptions="Center"
                               TextColor="#1F2937"
                               Opacity="0.9"
                               FontFamily="PoppinsBold"
                               Margin="0,20,0,0"/>

                        <!-- Username Section with Grid -->
                        <Grid ColumnSpacing="15" 
                              RowSpacing="8"
                              WidthRequest="450">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <Label Text="Username:"
                                   Grid.Row="0" Grid.Column="0"
                                   FontSize="14"
                                   TextColor="#1F2937"
                                   FontFamily="PoppinsRegular"
                                   VerticalOptions="Center"/>

                            <Entry Placeholder="Enter your username"
                                   Grid.Row="0" Grid.Column="1"
                                   PlaceholderColor="#9CA3AF"
                                   TextColor="#1F2937"
                                   FontSize="15"
                                   BackgroundColor="LightGrey"
                                   Text="{Binding Username}"
                                   Keyboard="Email"/>

                            <Label Text="Password:"
                                   Grid.Row="1" Grid.Column="0"
                                   FontSize="14"
                                   TextColor="#1F2937" 
                                   FontFamily="PoppinsRegular"
                                   VerticalOptions="Center"/>

                            <Entry Placeholder="Enter your password"
                                   Grid.Row="1" Grid.Column="1"
                                   PlaceholderColor="#9CA3AF"
                                   TextColor="#1F2937"
                                   BackgroundColor="LightGrey"
                                   FontSize="15"
                                   Text="{Binding Password}"
                                   IsPassword="True"/>
                        </Grid>

                        <!-- Sign In Button -->
                        <Button Text="Sign In"
                                HorizontalOptions="Center"
                                BackgroundColor="#6366F1"
                                TextColor="White"
                                FontSize="16"
                                FontFamily="PoppinsBold"
                                Command="{Binding LoginCommand}"
                                HeightRequest="50"
                                WidthRequest="450"
                                CornerRadius="8"
                                Margin="0,12,0,0"/>

                    </VerticalStackLayout>
                </Border>

            </VerticalStackLayout>
        </Grid>

        <!-- Loading Overlay -->
        <Grid Grid.ColumnSpan="1" 
              IsVisible="{Binding IsLoading}"
              BackgroundColor="#E6F5F5F7">

            <Border 
                VerticalOptions="Center"
                HorizontalOptions="Center"
                BackgroundColor="White"
                Stroke="#E5E7EB"
                StrokeThickness="1"
                Padding="50,40"
                StrokeShape="RoundRectangle 20">

                <VerticalStackLayout 
                    Spacing="20"
                    WidthRequest="220">

                    <ActivityIndicator 
                        IsRunning="{Binding IsLoading}"
                        Color="#6366F1"
                        WidthRequest="60"
                        HeightRequest="60"
                        HorizontalOptions="Center"/>

                    <Label Text="Signing in..."
                           TextColor="#1F2937"
                           FontSize="18"
                           FontFamily="PoppinsBold"
                           HorizontalOptions="Center"
                           HorizontalTextAlignment="Center"/>

                    <Label Text="Please wait"
                           TextColor="#6B7280"
                           FontSize="14"
                           FontFamily="PoppinsRegular"
                           HorizontalOptions="Center"
                           HorizontalTextAlignment="Center"
                           Margin="0,-10,0,0"/>
                </VerticalStackLayout>
            </Border>
        </Grid>

    </Grid>
</ContentPage>