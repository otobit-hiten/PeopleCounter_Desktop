<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="PeopleCounterDesktop.Controls.DesktopDropdown"
    x:Name="Root"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <VerticalStackLayout Spacing="6">
        <Label
            Text="{Binding Title, Source={x:Reference Root}}"
            FontSize="13"
            TextColor="#888888" />

        <Border
            Stroke="#CCCCCC"
            StrokeThickness="1"
            StrokeShape="RoundRectangle 10"
            Padding="12"
            HeightRequest="44"
            BackgroundColor="{AppThemeBinding Light=#FFFFFF, Dark=#2A2A2A}">

            <Grid ColumnDefinitions="*,Auto">
                <Label
                    Text="{Binding DisplayText, Source={x:Reference Root}}"
                    VerticalOptions="Center"
                    TextColor="{AppThemeBinding Light=#222222, Dark=#FFFFFF}" />

                <Label
                    Grid.Column="1"
                    Text="â–¼"
                    FontSize="12"
                    VerticalOptions="Center"
                    TextColor="#888888" />
            </Grid>

            <Border.GestureRecognizers>
                <TapGestureRecognizer
                    Command="{Binding OpenCommand, Source={x:Reference Root}}" />
            </Border.GestureRecognizers>
        </Border>
    </VerticalStackLayout>
</ContentView>
